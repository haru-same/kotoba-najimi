<div id="original-text" class="band" style="text-align:center; font-size: 2rem">
	<% if(options.promptType == 'audio') {%>
	<i class="fas fa-volume-up"></i>
	<% } else if(options.promptType == 'audio-cloze') { %>
	__<span style="text-decoration: underline;"><i class="fas fa-volume-up"></i></span>__
	<% } else if(options.promptType == 'text') { %>
	<span id="original-text-container"><%- furiganaHtml %></span>
	<% } else if(options.promptType == 'word-by-word') { %>
	<span id="original-text-container">__</span>
	<% } else { %>
	UNKNOWN PROMPTTYPE: <%= options.promptType %>
	<% } %>
</div>
<% if(options.promptType == 'audio-cloze' || options.promptType == 'word-by-word') { %>
<div id="blanked-text" class="band" style="text-align:center; font-size: 2rem; display: none">
	<% const blankString = options.blankLength ? "＿".repeat(options.blankLength) : "____"; %>
	<span id="original-text-container"><%- options.reviewPrompt || ((fact.clozeSentence || fact.sentence).replace(fact.word, blankString)) %></span>
	<button id='update-sentence-chunks'>✎</button>
</div>
<% } %>