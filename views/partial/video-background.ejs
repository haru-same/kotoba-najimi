<div style="text-align:center;position: absolute; height: 100%; padding-left:50%; top:0; background:black;z-index:1">
	<video id="main-video" height="100%" style="position: relative; left: -50%">
		<source src="<%- videoInfo.path %>">
		Your browser does not support the video tag.
	</video>
</div>

<script type="text/javascript">
	const endTime = <%= fact.end %>;
	$('#main-video')[0].currentTime = <%= fact.start - 0.5 %>;

	replayPrompt =  (callback) => {
		$('#main-video')[0].currentTime = <%= fact.start - 0.5 %>;
		$('#main-video').on('timeupdate', () => {
			if($('#main-video')[0].currentTime > endTime) {
				$('#main-video').off('timeupdate');
				$('#main-video')[0].pause();

				if(callback) callback();
			}
		});

		$('#main-video')[0].play();
	};
</script>