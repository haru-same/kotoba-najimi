<div class="background-image">
</div>

<style type="text/css">
	body {
		background: black;
		overflow: hidden;
	}

	.band {
		background-color: rgba(255, 255, 255, 0.8);
		border-radius: 8px;
	}

	.background-image {
		background: url('<%= fact.image %>');
		position: absolute;
		z-index: -1;
		top:0;
		left: 0;
		width: 100%;
		height: 100%;
		background-size: cover;
		background-position: center;
		-webkit-filter: blur(2px);
		-moz-filter: blur(2px);
		-o-filter: blur(2px);
		-ms-filter: blur(2px);
		filter: blur(2px);
		opacity: 0.8;
		overflow: hidden;
	}
</style>

<script type="text/javascript">
	setCorrectColor = () => {
		$(".band").css('background-color', 'rgba(144, 238, 144, 0.8)');
	};

	setWrongColor = () => {
		$(".band").css('background-color', 'rgba(255, 192, 203, 0.8)');
	};
</script>